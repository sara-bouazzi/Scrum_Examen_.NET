@model AM.ApplicationCore.Domain.Tache

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tache</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Titre" class="control-label"></label>
                <input asp-for="Titre" class="form-control" />
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Etat" class="control-label"></label>
                <select asp-for="Etat" class="form-control" asp-items="Html.GetEnumSelectList<AM.ApplicationCore.Domain.Tache.EtatTache>()">
                    <option value="">-- Sélectionner l'état --</option>
                </select>
                <span asp-validation-for="Etat" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateDebut" class="control-label"></label>
                <input asp-for="DateDebut" type="datetime-local" class="form-control" />
                <span asp-validation-for="DateDebut" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateFin" class="control-label"></label>
                <input asp-for="DateFin" type="datetime-local" class="form-control" />
                <span asp-validation-for="DateFin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SprintKey" class="control-label"></label>
                <input asp-for="SprintKey" class="form-control" />
                <span asp-validation-for="SprintKey" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MembreKey" class="control-label"></label>
                <input asp-for="MembreKey" class="form-control" />
                <span asp-validation-for="MembreKey" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
